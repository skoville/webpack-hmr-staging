{
  "name": "scoville-webpack",
  "version": "0.0.1",
  "description": "webpack-based, hot code swapping CI/CD platform.",
  "dependencies": {
    "ansicolor": "^1.1.83",
    "express": "^4.16.4",
    "memory-fs": "^0.4.1",
    "mime": "^2.4.2",
    "socket.io": "^2.2.0",
    "socket.io-client": "^2.2.0",
    "uuid": "^3.3.2",
    "webpack": "^4.29.6",
    "yargs": "^13.2.2"
  },
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/memory-fs": "^0.3.2",
    "@types/mime": "^2.0.1",
    "@types/node": "^10.12.23",
    "@types/socket.io": "^2.1.2",
    "@types/socket.io-client": "^1.4.32",
    "@types/ts-nameof": "^2.0.0",
    "@types/uuid": "^3.4.4",
    "@types/webpack": "^4.4.26",
    "@types/webpack-env": "^1.13.7",
    "@types/yargs": "^12.0.10",
    "dts-bundle": "^0.7.3",
    "ts-loader": "^5.4.3",
    "ts-loader-decleration": "^0.10.4",
    "ts-nameof": "^3.0.3",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.4"
  },
  "scripts": {
    "build": "ts-node --project ./public/tsconfig.json ./public/build-logic/webpack.config.ts && cd ./distribution && npm pack && cd ../",
    "postbuild": "ts-node --project ./public/tsconfig.json ./public/build-logic/post-build.ts",
    "start": "npm run build && npm test",
    "test": "npm run test:integration",
    "test:integration": "cd ./test/integration && npm un -P scoville-webpack && npm i -P ../../distribution/scoville-webpack.tgz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scoville-cicd/scoville-webpack.git"
  },
  "keywords": [
    "webpack",
    "hmr",
    "HotModuleReplacementPlugin",
    "WebpackDevServer",
    "webpack-dev-server",
    "hot",
    "replacement",
    "reload",
    "live",
    "ci",
    "cd",
    "continuous",
    "integration",
    "deployment",
    "scoville",
    "live coding"
  ],
  "author": "Alexander Leung",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/scoville-cicd/scoville-webpack/issues"
  },
  "homepage": "https://github.com/scoville-cicd/scoville-webpack#readme"
}
